<h1 align=center>Here is one cat!</h1>

<table align=center>
  <tr>
    <th>Attribute</th><th></th>
    <th>Description</th>
  </tr>

  <% @cat.as_json.each do |key, value| %>
    <tr>
      <td align=center><%=key%></td>
      <td width=100px>
      <td align=center><%=value%></td>
    </tr>
  <%end%>
</table>

<br><br>

<h2 align=center>Rentals for this cat</h2>

<table align=center>

  <% if @cat.cat_rental_requests.empty? %>
    <tr>
      <td align=center>There are no rentals for this cat yet :(</td>
    </tr>
  <%else%>
    <tr>
      <th>Start Date</th>
      <th>End Date</th>
    </tr>
    <% @cat.cat_rental_requests.sort.reverse.each do |rental_request| %>
      <tr>
        <td width=200px align=center><%=rental_request.start_date%></td>
        <td width=200px align=center><%=rental_request.end_date%></td>
      </tr>
    <%end%>
  <%end%>


</table>