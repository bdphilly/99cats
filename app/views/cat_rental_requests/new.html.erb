<h1>Rent a cat!</h1>

<form action="/cat_rental_requests" method="POST">

  <br>
    <label for="cat_id"> Select yo cat!</label>
    <select name="cat_rental_request[cat_id]">
      <option>SelectCat</option>
      <% @cats.each do |cat| %>
        <option value="<%cat.id%>"><%=cat.name%></option>
      <% end %>
    </select>

  <br><br>

  <label for="start_date">Rental Start Date</label>
  <input name="cat_rental_request[start_date]" id="start_date" type="date"
  </input>

  <br><br>

  <label for="end_date">Rental End Date</label>
  <input name="cat_rental_request[end_date]" id="end_date" type="date"
  </input>

  <br><br>
  <input type="submit" value="Rent my cat!">

</form>